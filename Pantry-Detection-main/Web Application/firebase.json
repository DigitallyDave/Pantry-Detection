{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/images/**",
        "destination": "/images/$1"
      },
      {
        "source": "/style/**",
        "destination": "/style/$1"
      },
      {
        "source": "/scripts/**",
        "destination": "/scripts/$1"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
